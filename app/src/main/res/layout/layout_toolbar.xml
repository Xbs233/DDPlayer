<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/qb_px_48"
    android:background="#66ccff"
    app:layout_scrollFlags="scroll|enterAlways"
    >
    <ImageView
        android:id="@+id/imv_drawer_switch"
        android:src="@mipmap/ic_drawer_home"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_toEndOf="@id/imv_drawer_switch"
        
        android:layout_marginStart="@dimen/qb_px_16"
        android:id="@+id/imv_avatar"
        android:layout_width="@dimen/qb_px_40"
        android:layout_height="@dimen/qb_px_40"
        android:src="@mipmap/ico_user_default"
        />
    <ImageView
        
        android:id="@+id/imv_search"
        android:layout_width="@dimen/qb_px_128"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/imv_avatar"
        android:layout_marginStart="@dimen/qb_px_16"
        android:src="@mipmap/ic_search"
        android:visibility="invisible"
         />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="#ffffff"
        android:layout_centerInParent="true"
        android:text="频道"
        android:textSize="24sp"
        android:gravity="center"
        android:visibility="invisible"
        />

    <ImageView

        android:id="@+id/imv_ic1"
        android:layout_width="@dimen/qb_px_32"
        android:layout_height="@dimen/qb_px_32"
        android:layout_toStartOf="@id/imv_ic2"
        
        android:src="@mipmap/ic_danmuku_nums"
        android:layout_marginEnd="@dimen/qb_px_16"
        android:visibility="invisible"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        />

    <ImageView
        android:id="@+id/imv_ic2"
        android:layout_width="@dimen/qb_px_32"
        android:layout_height="@dimen/qb_px_32"
        android:layout_toStartOf="@id/imv_ic3"
        
        android:src="@mipmap/ic_danmuku_nums"
        android:layout_marginEnd="@dimen/qb_px_16"
        android:visibility="invisible"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        />

    <ImageView
        android:id="@+id/imv_ic3"
        android:layout_width="@dimen/qb_px_32"
        android:layout_height="@dimen/qb_px_32"
        android:layout_alignParentEnd="true"
        
        android:src="@mipmap/ic_danmuku_nums"
        android:layout_marginEnd="@dimen/qb_px_16"
        android:visibility="invisible"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        />


</RelativeLayout>