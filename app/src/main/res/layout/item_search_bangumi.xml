<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/qb_px_188"
    android:background="#ffffff"
    >
    <LinearLayout
        android:id="@+id/item_liner"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:paddingStart="@dimen/qb_px_12"
            android:paddingTop="@dimen/qb_px_12"
            android:paddingEnd="@dimen/qb_px_12"
            android:paddingBottom="@dimen/qb_px_12"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7">
            <ImageView
                android:id="@+id/imv_cover"
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                />
            <RelativeLayout
                android:paddingLeft="@dimen/qb_px_12"
                android:layout_weight="0.6"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:textSize="14sp"
                    android:textColor="#000000"

                    android:maxLines="2"
                    android:ellipsize="end"
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:paddingTop="@dimen/qb_px_5"
                    android:id="@+id/tv_detail"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:ellipsize="end"

                    android:layout_below="@id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:paddingTop="@dimen/qb_px_5"
                    android:textSize="12sp"
                    android:id="@+id/tx_tag"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_below="@id/tv_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_alignParentBottom="true"
                    android:id="@+id/txv_goto_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="@color/colorPrimary"
                    />
                <TextView
                    android:layout_marginStart="@dimen/qb_px_16"
                    android:layout_toEndOf="@id/txv_goto_play"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/txv_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="@color/colorPrimary"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:paddingTop="@dimen/qb_px_12"
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/txv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="22sp"
                    android:textColor="@color/colorPrimary"
                    />
                <TextView
                    android:paddingTop="8sp"
                    android:layout_toEndOf="@id/txv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="åˆ†"
                    android:textSize="16sp" />
                <TextView
                    android:paddingLeft="@dimen/qb_px_12"
                    android:id="@+id/txv_people"
                    android:layout_below="@id/txv_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:textSize="12sp"
                    />
            </RelativeLayout>

        </LinearLayout>

    <LinearLayout
        android:paddingStart="@dimen/qb_px_12"
        android:paddingTop="@dimen/qb_px_12"
        android:paddingBottom="@dimen/qb_px_12"
        android:layout_weight="0.3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        >
        <TextView
            android:layout_marginEnd="@dimen/qb_px_12"
            android:id="@+id/txv_cid1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1"
            android:visibility="invisible"
            android:background="@drawable/shape_text_with_border"
            />
        <TextView
            android:layout_marginEnd="@dimen/qb_px_12"
            android:id="@+id/txv_cid2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2"
            android:visibility="invisible"
            android:background="@drawable/shape_text_with_border"
            />
        <TextView
            android:layout_marginEnd="@dimen/qb_px_12"
            android:id="@+id/txv_cid3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="..."
            android:visibility="invisible"
            android:background="@drawable/shape_text_with_border"
            />
        <TextView
            android:layout_marginEnd="@dimen/qb_px_12"
            android:id="@+id/txv_cid4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="23"
            android:visibility="invisible"
            android:background="@drawable/shape_text_with_border"
            />
        <TextView
            android:layout_marginEnd="@dimen/qb_px_12"
            android:id="@+id/txv_cid5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:visibility="invisible"
            android:text="24"
            android:background="@drawable/shape_text_with_border"
            />
        <TextView
            android:layout_marginEnd="@dimen/qb_px_12"
            android:id="@+id/txv_cid6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="25"
            android:visibility="invisible"
            android:background="@drawable/shape_text_with_border"
            />

    </LinearLayout>
    </LinearLayout>
</LinearLayout>